{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "World cup attendance",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/PatricMangi/work9/main/js/custom.geo%20(1)%20(1).topojson",
    "format": {"type": "topojson", "feature": "custom.geo%20(1)%20(1)"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/PatricMangi/work9/main/data/WorldCups.csv"
        },
        "key": "Country",
        "fields": ["GoalsScored"]
      }
    }
  ],
  "projection": {"type": "albersUsa"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "GoalsScored",
      "type": "quantitative",
      "scale": {"domain": [0, 200]}
    }
  }
}
